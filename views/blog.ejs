<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%-include('./partials/head')%>
    <title>Blog</title>
</head>
<body>
    <%-include('./partials/nav')%>
    <div class="container mt-3">
        <p style="font-weight: 500; font-size: 2rem;"><%=blog.title%></p>
        <img src="<%=blog.coverImgUrl%>"  width="750px" alt="">
        <pre class="body mt-3"><%=blog.body%></pre>
    </div>
    <div class="container mt-3 mb-5">
        <img src="<%=blog.createdBy.profileImgUrl%>" width="50px"> <%=blog.createdBy.fullName%>
    </div>
    <div class="container mt-5 mb-2 pt-2" style="border: 1px solid grey; border-radius: 10px;">
        <h4>Comments(<%=comments.length%>)</h2>
        <% if (locals.user) { %>
            <div class="container mt-3 mb-5">
                <form action="/blog/comment/<%=blog._id%>" method="post">
                    <input type="text" class="form-control" id="content" name="content" placeholder="Add a comment">
                    <button type="submit" class="btn btn-primary mt-2">Add</button>
                </form>
            </div>
        <% } %>
        <% comments.forEach(comment => { %>
            <div class="container mb-2">
                <img src="<%=comment.createdBy.profileImgUrl%>" width="30px"> <%=comment.createdBy.fullName%>
                <pre style="font-size: 20px;"><%=comment.content%></pre>
            </div>
        <% }) %>
    </div>
    
    <%-include('./partials/script')%>
</body>
</html>