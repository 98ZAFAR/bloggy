<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%-include('./partials/head')%>
    <title>signup</title>
</head>
<body>
    <%-include('./partials/nav')%>
    <form action="/user/signup" method="post">
        <div style="padding-top: 20px;" class="container">
            <div class="fullName">
                <label for="fullName" class="col-sm-2 col-form-label" name="fullName">Full Name</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="fullName" name="fullName">
                </div>
              </div>
              <div class="email">
                <label for="email" class="col-sm-2 col-form-label" name="email">Email</label>
                <div class="col-sm-10">
                  <input type="email" class="form-control" id="email" name="email">
                </div>
              </div>
              <div class="password">
                <label for="password" class="col-sm-2 col-form-label" name="password">Password</label>
                <div class="col-sm-10">
                  <input type="password" class="form-control" id="password" name="password">
                </div>
              </div>
              
              <button style="margin-top: 20px;" type="submit" class="btn btn-primary">Sign up</button>
        </div>    
    </form>
    <%-include('./partials/script')%>
</body>
</html>